<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

<xacro:property name="M_PI_2" value="1.570796327" />

<xacro:macro name="wheel_link" params="prefix mesh mass radius width origin_rpy">
    <link name="${prefix}_link">
        <visual name = "${prefix}_visual">
         <origin xyz="0 0 0" rpy="${origin_rpy}" />
          <geometry>
            <mesh filename="${mesh}" scale="0.001 0.001 0.001"/>
          </geometry>
        <material name="orange" />
        </visual>  
        <collision name = "${prefix}_collision">
          <geometry>
            <mesh filename="${mesh}" scale="0.001 0.001 0.001"/>
          </geometry>
         <origin xyz="0 0 0" rpy="${origin_rpy}"/>
        </collision>      
        <inertial>
            <mass value="${mass}" />
            <origin xyz="0 0 0" />
            <xacro:cylinder_inertia m="${mass}" r="${radius}" h="${width}"/>
        </inertial>
    </link>
</xacro:macro>
    
<xacro:macro name="caster_wheel_joint" params="prefix child origin_xyz">
    <joint name="${prefix}_joint" type="fixed">
        <parent link="chassis_link"/>
        <child link="${child}"/>
        <origin xyz="${origin_xyz}" rpy="0 0 0"/>
    </joint>
</xacro:macro>

<xacro:macro name="wheel_joint" params="prefix child origin_xyz">
    <joint name="${prefix}_joint" type="continuous">
        <axis xyz="0 1 0" rpy="0 0 0" />
        <parent link="chassis_link"/>
        <child link="${child}"/>
        <origin xyz="${origin_xyz}" rpy="0 0 0"/>
        <limit effort="100" velocity="100"/>
        <joint_properties damping="0.0" friction="0.0"/>
    </joint>

    <transmission name="${prefix}_trans">
      <type>transmission_interface/SimpleTransmission</type>
      <joint name="${prefix}_joint">
        <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
      </joint>
      <actuator name="${prefix}Motor">
        <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
        <mechanicalReduction>10</mechanicalReduction>
      </actuator>
    </transmission>
</xacro:macro>

</robot>