<?xml version="1.0" encoding="UTF-8"?>
<launch>
  <arg name="rvizconfig" default="$(find forklift_description)/launch/laser.rviz" />

  <include file="$(find forklift_gazebo)/launch/forklift_warehouse.launch">
  </include>

  <!-- Show in Rviz   -->
  <node name="rviz" pkg="rviz" type="rviz" args="-d $(arg rvizconfig)" required="true"/>

  <node name="slam_gmapping" pkg="gmapping" type="slam_gmapping">
    <rosparam file="$(find forklift_gmapping)/config/slam_gmapping_params.yaml" />
    <remap from="scan" to="nav1/laser/scan" />
  </node>

</launch>